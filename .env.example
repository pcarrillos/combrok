# Comunidad Broker - Environment Variables

# Site Configuration
SITE_URL=http://localhost:4321
SITE_NAME="Comunidad Broker"
SITE_DESCRIPTION="Portal independiente de análisis de brokers y noticias de inversión"

# Analytics
PLAUSIBLE_DOMAIN=comunidadbroker.com
GOOGLE_ANALYTICS_ID=

# Contact & Support
CONTACT_EMAIL=contacto@comunidadbroker.com
SUPPORT_EMAIL=soporte@comunidadbroker.com

# Admin Panel (DO NOT use in production!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=combrok2024
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Database (if using external DB in the future)
DATABASE_URL=

# Email Configuration (for newsletters, notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@comunidadbroker.com

# API Keys
UNSPLASH_ACCESS_KEY=
EXCHANGERATE_API_KEY=

# Feature Flags
ENABLE_NEWSLETTER=true
ENABLE_COMMENTS=false
ENABLE_USER_REGISTRATION=false

# Performance
CACHE_TTL=3600
IMAGE_OPTIMIZATION=true

# Security
CORS_ORIGIN=http://localhost:4321
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# Development
NODE_ENV=development
LOG_LEVEL=info