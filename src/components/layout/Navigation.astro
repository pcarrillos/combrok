---
import { NAVIGATION } from '@/utils/constants';

export interface Props {
  mobile?: boolean;
}

const { mobile = false } = Astro.props;
const currentPath = Astro.url.pathname;
---

<ul class={mobile ? 'space-y-1' : 'flex space-x-8'} role="list">
  {NAVIGATION.map(item => {
    const isActive = currentPath === item.href || 
                    (item.href !== '/' && currentPath.startsWith(item.href));
    
    return (
      <li>
        <a
          href={item.href}
          class={`
            ${mobile 
              ? 'block px-4 py-3 rounded-lg text-base font-medium' 
              : 'text-sm font-semibold px-4 py-2 rounded-lg relative'
            }
            ${isActive 
              ? mobile 
                ? 'bg-primary-50 text-primary-900 border-l-4 border-primary-500' 
                : 'text-corporate-primary bg-primary-50 shadow-sm'
              : mobile
                ? 'text-gray-700 hover:bg-primary-50 hover:text-primary-700'
                : 'text-gray-600 hover:text-corporate-primary hover:bg-primary-50'
            }
            transition-all duration-200
          `}
          aria-current={isActive ? 'page' : undefined}
        >
          {item.name}
        </a>
      </li>
    );
  })}
</ul>